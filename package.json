{
  "name": "docbase",
  "version": "0.4.30",
  "type": "module",
  "bin": "./dist/cli/index.js",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js",
      "require": "./dist/lib/index.js"
    },
    "./server": {
      "types": "./dist/main/index.d.ts",
      "import": "./dist/main/index.js",
      "require": "./dist/main/index.js"
    },
    "./client": {
      "import": "./dist/client/client.gen.ts",
      "require": "./dist/client/client.gen.ts"
    },
    "./sdk": {
      "import": "./dist/client/index.ts",
      "require": "./dist/client/index.ts"
    }
  },
  "repository": {
    "url": "https://github.com/docbase-cc/docbase"
  },
  "homepage": "https://docbase.cc",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build && bun ./postbuild.ts",
    "dev": "bun run ./dev.ts",
    "start": "bun run --bun ./dist/main/main.js",
    "compile": "bun run ./dist/cli/index.js compile --outputDir ./compile"
  },
  "devDependencies": {
    "@types/bun": "^1.2.9",
    "@types/fs-extra": "^11.0.4",
    "chalk": "^5.4.1",
    "concurrently": "^9.1.2",
    "es-toolkit": "^1.34.1",
    "fs-extra": "^11.3.0",
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "ky": "^1.8.1",
    "rollup": "^4.40.0",
    "rollup-plugin-dts": "^6.2.1"
  },
  "dependencies": {
    "@hey-api/client-fetch": "^0.10.0"
  },
  "files": [
    "./dist/cli/**/*",
    "./dist/client/**/*",
    "./dist/lib/**/*",
    "./dist/main/index*",
    "./dist/main/chunk*",
    "./dist/docker-compose.yaml"
  ]
}
