generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Plugin {
    name   String @id
    config Json

    Ext2Plugin Ext2Plugin[]
}

model Ext2Plugin {
    ext String @id

    plugin     Plugin @relation(fields: [pluginName], references: [name])
    pluginName String
}

model KnowledgeBase {
    id   String @id @default(uuid())
    name String
}
