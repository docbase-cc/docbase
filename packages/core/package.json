{
  "name": "core",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./src": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./client": {
      "import": "./client/client.gen.ts",
      "require": "./client/client.gen.ts"
    },
    "./sdk": {
      "import": "./client/index.ts",
      "require": "./client/index.ts"
    }
  },
  "repository": {
    "url": "https://github.com/docbase-cc/docbase"
  },
  "homepage": "https://docbase.cc",
  "scripts": {
    "build": "tsup && bun ./postbuild.ts"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "tsup": "^8.4.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "console-table-printer": "^2.12.1",
    "es-toolkit": "^1.34.1",
    "fdir": "^6.4.3",
    "fs-extra": "^11.3.0",
    "hash-wasm": "^4.12.0",
    "itertools-ts": "^2.2.0",
    "meilisearch": "^0.49.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "treeshake": true,
    "shims": true,
    "minify": true
  },
  "files": [
    "./dist/**/*",
    "./docker-compose.yaml",
    "./client/*"
  ]
}
